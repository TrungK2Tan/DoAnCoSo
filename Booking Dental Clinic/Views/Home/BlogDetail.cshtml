@model Booking_Dental_Clinic.Models.DienDan
@{
    ViewBag.Title = "BlogDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- DIỄN ĐÀN  -->
<div class="container py-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <!-- CHI TIẾT DIỄN ĐÀN -->
            <div class="mb-5">
                <img class="img-fluid w-100 rounded mb-5" src="~/img/@Model.img" alt="">
                <h1 class="mb-4">@Html.DisplayFor(model => model.title)</h1>
                <p> @Html.DisplayFor(model => model.content)</p>

                <div class="d-flex justify-content-between bg-light rounded p-4 mt-4 mb-4">
                    <div class="d-flex align-items-center">
                        <img class="rounded-circle me-2" src="~/img/user.jpg" width="40" height="40" alt="">
                        <span>Trần Quốc Duy</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="ms-3"><i class="far fa-eye text-primary me-1"></i>12345</span>
                        <span class="ms-3"><i class="far fa-comment text-primary me-1"></i>123</span>
                    </div>
                </div>
            </div>

            <!-- KẾT THÚC DIỄN ĐÀN -->
        </div>
    </div>
</div>
<!-- HẾT DIỄN ĐÀN -->
