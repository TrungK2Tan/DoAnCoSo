@model Booking_Dental_Clinic.Models.NhaSi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row g-4">
        <div class="col-lg-5">
            <div class="mb-5">
                <img class="img-fluid w-100 rounded mb-5" src="~/img/@Model.HinhAnh" style="max-width: 400px" alt="">
            </div>
        </div>
        <div class="col-lg-7">
            <div class="mb-5">
                <h2>Nha Sĩ</h2>
                <h1 class="display-4 mb-4">@Html.DisplayFor(model => model.Ten)</h1>
                <p class="lead">@Html.DisplayFor(model => model.ThongTin)</p>
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-primary border-bottom border-5">Thời gian làm việc:</h2>
                        <p class="text-primary" style="font-size: 20px">@Html.DisplayFor(model => model.GioBatDau)-@Html.DisplayFor(model => model.GioKetThuc)</p>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-primary btn-lg w-50 py-2" href="@Url.Action("Appointment", "Home", new {@IDBACSI = Model.IDBACSI, @GioBatDau = Model.GioBatDau, @GioKetThuc = Model.GioKetThuc})">Đặt Lịch</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
