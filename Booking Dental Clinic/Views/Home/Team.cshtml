@model PagedList.IPagedList<Booking_Dental_Clinic.Models.NhaSi>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Sidebar Start -->
    @foreach (var item in Model)
    {
        <div class="row g-4" style="padding: 30px">
            <div class="col-lg-4">
                <a href="@Url.Action("Details", new { id = item.IDBACSI })">
                    <img class="img-fluid h-100" src="~/img/@item.HinhAnh" style="object-fit: cover;">
                </a>
            </div>
            <div class="col-lg-6">
                <div class="mb-5">
                    <h2>Nha Sĩ</h2>
                    <a href="@Url.Action("Details", new { id = item.IDBACSI })">
                        <h1 class="mb-4">@Html.DisplayFor(modelItem => item.Ten)</h1>
                        <div class="d-flex mt-auto border-top p-4">
                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-tiktok"></i></a>
                        </div>
                        <div class="d-flex mt-auto border-top p-4">@item.ThongTin</div>
                </div>
            </div>
        </div>
    }
</div>

<br />
<br />
<!-- Thêm phân trang vào -->
<div class="page-footer" style="display:flex;justify-content:space-around">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="page-footer" style="display:flex;justify-content:space-around">
    @Html.PagedListPager(Model, page => Url.Action("Team", new { page }))
</div>
<!-- Kết thúc -->
