@model PagedList.IPagedList<Booking_Dental_Clinic.Models.NhaSi>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="owl-carousel team-carousel position-relative">
    @foreach (var item in Model)
    {
        <div class="team-item">
            <div class="row g-0 bg-light rounded overflow-hidden">
                <div class="col-12 col-sm-5 h-100">
                    <a href="@Url.Action("Details", new { id = item.IDBACSI })">
                        <img class="img-fluid h-100" src="~/img/@item.HinhAnh" style="object-fit: cover;">
                    </a>
                </div>
                <div class="col-12 col-sm-7 h-100 d-flex flex-column">
                    <div class="mt-auto p-4">
                        <a href="@Url.Action("Details", new { id = item.IDBACSI })">
                            <h3>@Html.DisplayFor(modelItem => item.Ten)</h3>
                            <h6 class="fw-normal fst-italic text-primary mb-4">Bác sĩ chuyên khoa nha</h6>
                        </a>
                        <p class="m-0">Nụ Cười Của Bạn Là Niềm Vui Của Tôi</p>
                    </div>
                    <div class="d-flex mt-auto border-top p-4">
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br />
<br />
<!-- Thêm phân trang vào -->
<div class="page-footer" style="display:flex;justify-content:space-around">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="page-footer" style="display:flex;justify-content:space-around">
    @Html.PagedListPager(Model, page => Url.Action("Team", new { page }))
</div>
