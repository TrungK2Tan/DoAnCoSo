@model PagedList.IPagedList<Booking_Dental_Clinic.Models.NhaSi>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <a href="@Url.Action("Details", new { id = item.IDBACSI })">
                        <img class="card-img-top" src="~/img/@item.HinhAnh" alt="@item.Ten" style="object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@item.Ten</h5>
                        <div class="card-text">
                            @Html.Raw(item.ThongTin.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries).FirstOrDefault())
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                            <a class="btn btn-primary btn-lg btn-social me-2" href="#"><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-primary btn-lg btn-social me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-primary btn-lg btn-social" href="#"><i class="fab fa-tiktok"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="d-flex justify-content-center">
                Trang @(Model.PageNumber) / @Model.PageCount
            </div>
            <div class="d-flex justify-content-center mt-2">
                @Html.PagedListPager(Model, page => Url.Action("Team", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
    </div>
</div>
