@model IEnumerable<Booking_Dental_Clinic.Models.DienDan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Diễn Đàn</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            <img class="img-fluid w-100" src="~/img/@item.img" alt="">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_diendan }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_diendan }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_diendan })
        </td>
    </tr>
}

</table>
