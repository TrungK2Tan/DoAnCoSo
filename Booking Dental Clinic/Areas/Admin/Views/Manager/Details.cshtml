@model Booking_Dental_Clinic.Models.AspNetUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Details</h2>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Information</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3">Username</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>
                        <dt class="col-sm-3">FullName</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
