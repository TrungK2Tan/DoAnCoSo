@model IEnumerable<Booking_Dental_Clinic.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Index</h2>


            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th>Email</th>
                            <th>Tên Dịch Vụ</th>
                            <th>Hình Thức Thanh Toán</th>
                            <th>Tên Nhà Sĩ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                                <td>@Html.DisplayFor(modelItem => item.AspNetUser.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.GoiDichVu.TenDichVu)</td>
                                <td>@Html.DisplayFor(modelItem => item.HinhThucThanhToan.TenHinhThuc)</td>
                                <td>@Html.DisplayFor(modelItem => item.NhaSi.Ten)</td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.ID_HoaDon }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_HoaDon }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
