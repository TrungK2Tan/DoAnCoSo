@{
    ViewBag.Title = "Total Revenue";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Bảng Doanh Thu</h2>

@if (ViewBag.HoaDons != null && ViewBag.HoaDons.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Email</th>
                <th>Tên Dịch Vụ</th>
                <th>Hình Thức Thanh Toán</th>
                <th>Tên Nha Sĩ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.HoaDons as List<Booking_Dental_Clinic.Models.HoaDon>)
            {
                <tr>
                    <td>@string.Format("{0:C}", item.TongTien)</td>
                    <td>@item.TrangThai</td>
                    <td>@item.AspNetUser.Email</td>
                    <td>@item.GoiDichVu.TenDichVu</td>
                    <td>@item.HinhThucThanhToan.TenHinhThuc</td>
                    <td>@item.NhaSi.Ten</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Tổng Doanh Thu: @string.Format("{0:C}", ViewBag.TotalRevenue)</p>
}
else
{
    <p>No records found.</p>
}
